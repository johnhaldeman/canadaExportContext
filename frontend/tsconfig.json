{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "filesGlob": [
      "!node_modules",
      "node_modules/@types/**/*.d.ts",
      "app/**/*.d.ts",
      "app/**/*.ts"
  ]
}
